import std.io

fn main() {
    io.print("What is your name? ")
    let name = io.read_line()
    print("Hello, {name}!")

    io.print("Enter a number: ")
    let n = io.read_line().to_int() catch 0
    print("Your number doubled is {n * 2}")

    io.print("Enter a temperature in Fahrenheit: ")
    let f = io.read_line().to_float() catch 0.0
    let celsius = (f - 32.0) * 5.0 / 9.0
    print("That's {celsius} Celsius")
}
