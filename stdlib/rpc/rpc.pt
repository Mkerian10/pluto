// HTTP RPC client for cross-stage method calls
// Raises: NetworkError, TimeoutError, ServiceUnavailable

extern fn __pluto_http_post(url: string, body: string, timeout_ms: int) string

pub fn http_post(url: string, body: string) string {
    return __pluto_http_post(url, body, 5000)
}

pub fn http_post_with_timeout(url: string, body: string, timeout_ms: int) string {
    return __pluto_http_post(url, body, timeout_ms)
}
