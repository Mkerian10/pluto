pub fn abs(x: int) int {
    if x < 0 {
        return 0 - x
    }
    return x
}

pub fn min(a: int, b: int) int {
    if a < b {
        return a
    }
    return b
}

pub fn max(a: int, b: int) int {
    if a > b {
        return a
    }
    return b
}

pub fn pow(base: int, exp: int) int {
    if exp < 0 {
        return 0
    }
    let mut result = 1
    let mut i = 0
    while i < exp {
        result = result * base
        i = i + 1
    }
    return result
}

pub fn clamp(x: int, lo: int, hi: int) int {
    if x < lo {
        return lo
    }
    if x > hi {
        return hi
    }
    return x
}

pub fn PI() float {
    return 3.14159265358979323846
}

pub fn E() float {
    return 2.71828182845904523536
}

pub fn TAU() float {
    return 3.14159265358979323846 * 2.0
}

pub fn sign(x: int) int {
    if x > 0 {
        return 1
    }
    if x < 0 {
        return 0 - 1
    }
    return 0
}

pub fn clamp_float(x: float, lo: float, hi: float) float {
    if x < lo {
        return lo
    }
    if x > hi {
        return hi
    }
    return x
}

pub fn gcd(a: int, b: int) int {
    let mut x = a
    let mut y = b
    if x < 0 {
        x = 0 - x
    }
    if y < 0 {
        y = 0 - y
    }
    while y != 0 {
        let t = y
        y = x % y
        x = t
    }
    return x
}

pub fn lcm(a: int, b: int) int {
    if a == 0 {
        return 0
    }
    if b == 0 {
        return 0
    }
    let g = gcd(a, b)
    let mut aa = a
    if aa < 0 {
        aa = 0 - aa
    }
    let mut bb = b
    if bb < 0 {
        bb = 0 - bb
    }
    return aa / g * bb
}

pub fn factorial(n: int) int {
    let mut result = 1
    let mut i = 2
    while i <= n {
        result = result * i
        i = i + 1
    }
    return result
}

pub fn is_even(n: int) bool {
    return n % 2 == 0
}

pub fn is_odd(n: int) bool {
    return n % 2 != 0
}

pub fn to_radians(degrees: float) float {
    return degrees * 3.14159265358979323846 / 180.0
}

pub fn to_degrees(radians: float) float {
    return radians * 180.0 / 3.14159265358979323846
}
